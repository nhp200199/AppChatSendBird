<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_intro"
        android:layout_width="500px"
        android:layout_height="500px"
        android:src="@drawable/pacpac"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tv_intro_title"
        android:textSize="22sp"
        android:layout_marginTop="32dp"
        android:text="Chúng tôi mong muốn gửi đến bạn một nơi hoàn hảo nhất để nhắn tin với bạn bè."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="72px"
        android:layout_marginLeft="72px"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/tv_intro_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="8dp"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Mo ta"/>

</LinearLayout>