<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_conversation_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingRight="15dp"
    android:paddingBottom="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_conversation_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/couple" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_conversation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello"
            android:textSize="20sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/tv_conversation_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_conversation_name"
            android:ellipsize="end"
            android:maxWidth="150dp"
            android:maxLines="1"
            android:text="hello"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_conversation_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_conversation_content"
            android:layout_marginLeft="15dp"
            android:layout_alignParentRight="true"
            android:text="date"
            android:textSize="16sp" />

    </RelativeLayout>
</LinearLayout>